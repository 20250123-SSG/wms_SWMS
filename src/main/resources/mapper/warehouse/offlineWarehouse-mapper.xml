<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swms.warehouse.model.dao.OfflineWarehouseMapper">

    <resultMap id="offlineWarehouseResultMap" type="com.example.OfflineWarehouseDto">
        <id property="offlineWarehouseId" column="offline_warehouse_id"/>
        <result property="storeId" column="store_id"/>
        <result property="shoesId" column="shoes_id"/>
        <result property="quantity" column="quantity"/>
    </resultMap>

    <!-- 전체 조회 -->
    <select id="selectAllOfflineWarehouse" resultMap="offlineWarehouseResultMap">
        select
            offline_warehouse_id
          , store_id
          , shoes_id
          , quantity
        from
            tbl_offline_warehouse
        order by
            offline_warehouse_id desc
        limit #{limit} offset #{offset}
    </select>

</mapper>